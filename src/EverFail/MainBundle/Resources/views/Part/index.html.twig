{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Part List</h1>
    <ul>
            <a href="{{ path('part_new') }}">
                <h3>Add a new Part</h3>
            </a>
    </ul>
    <br/>

    <table class="table">
        <thead>
            <tr>
                <th>{{ partName }}</th>
                <th>{{ price }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('part_show', { 'id': entity.id }) }}">{{ entity.partName }}</a></td>
                <td>{{ entity.price }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('part_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('part_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}

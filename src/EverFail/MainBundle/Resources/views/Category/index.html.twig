{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Category List</h1>
    <ul>
            <a href="{{ path('category_new') }}">
                <h3>Add a new Category</h3>
            </a>
    </ul>
    <br/>

    <table class="table">
        <thead>
            <tr>
                <th>{{ categoryName }}</th>
                <th>{{ description }}</th>
                <th>{{ minStock }}</th>
                <th>{{ stock }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.categoryName }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.minStock }}</td>
                <td>{{ entity.stock }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
    {% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
<div class="grid_9">
    <h1 class="category">Category List</h1>
</div>
<div id="portlets">
    <div class="column">
        <b>List of Available Categories</b>
        <br/>
<div class="sign-in">
    {{form(form)}}
    </div>
    <br/>
        <table width="100%" cellpadding="0" cellspacing="0" id="box-table-a" summary="Employee Pay Sheet">
            <thead>
                <tr>
                    <th>{{ categoryName }}</th>
                    <th>{{ description }}</th>
                    <th>{{ minStock }}</th>
                    <th>{{ stock }}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.categoryName }}</a></td>
                    <td>{{ entity.description }}</td>
                    <td>{{ entity.minStock }}</td>
                    <td>{{ entity.stock }}</td>
                    <td colspan="4"><a href="#" class="edit_inline">Edit</a><a href="#" class="delete_inline">Delete</a><a href="{{ path('category_show', { 'id': entity.id }) }}" class="approve_inline">View</a></td>

                </tr>
        {% endfor %}
            </tbody>
        </table>
        <ul>
            <a href="{{ path('category_new') }}">
                <h3>Add a new Category</h3>
            </a>
        </ul>
    </div>
</div>
    {% endblock %}

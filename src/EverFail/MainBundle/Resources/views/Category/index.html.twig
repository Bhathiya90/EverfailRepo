{% extends '::base.html.twig' %}

{% block body -%}
<h1>Category list</h1>

<table class="table">
	<thead>
		<tr>
			<th>{{ categoryName }}</th>
			<th>{{ description }}</th>
			<th>{{ minStock }}</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.categoryName }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.minStock }}</td>
                <td>
					<ul>
						<li>
							<a href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
						</li>
						<li>
							<a href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
						</li>
					</ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

	<ul>
        <li>
            <a href="{{ path('category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

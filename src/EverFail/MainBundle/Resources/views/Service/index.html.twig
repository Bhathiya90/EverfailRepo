{% extends '::base.html.twig' %}

{% block body -%}
<div class="grid_9">
    <h1 class="service">Service List</h1>
</div>
<div id="portlets">
    <div class="column">
        <b>List of Registered Services</b>

        <br/>
        <div class="sign-in">
    {{form(form)}}
        </div>
        <br/>

        <table width="100%" cellpadding="0" cellspacing="0" id="box-table-a" summary="Employee Pay Sheet">
            <thead>
                <tr>
                    <th>{{ serviceDate }}</th>
                    <th>{{ serviceCharge }}</th>
                    <th>{{ note }}</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('service_show', { 'id': entity.id }) }}">{{ entity.serviceDate|date('Y-m-d') }}</a></td>
                    <td>{{ entity.serviceCharge }}</td>
                    <td>{{ entity.note }}</td>
                    <td colspan="4"><a href="#" class="edit_inline">Edit</a><a href="#" class="delete_inline">Delete</a><a href="{{ path('service_show', { 'id': entity.id }) }}" class="approve_inline">View</a></td>
                </tr>
        {% endfor %}
            </tbody>
        </table>
        <ul>
            <a href="{{ path('service_new') }}">
                <h3>Create a Service</h3>
            </a>
        </ul>
    </div>
</div>
    {% endblock %}

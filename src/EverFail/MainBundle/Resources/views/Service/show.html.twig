{% extends '::base.html.twig' %}

{% block body -%}
<div class="grid_9">
    <h1 class="service">Service List</h1>
</div>
<div id="portlets">
    <div class="column">
        <b>List of Registered Services</b>
    <br/>
    <table width="100%" cellpadding="0" cellspacing="0" id="box-table-a" summary="Employee Pay Sheet">
        <tbody>
            <tr>
                <th>{{ serviceDate }}</th>
                <td>{{ entity.serviceDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>{{ serviceCharge }}</th>
                <td>{{ entity.serviceCharge }}</td>
            </tr>
            <tr>
                <th>{{ note }}</th>
                <td>{{ entity.note }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="news_items">
    <li>
        <a href="{{ path('service') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('service_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
 
</ul>
    {{ form(delete_form) }}
    </div>
    </div>
{% endblock %}
